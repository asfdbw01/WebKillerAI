<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.webkillerai.app.ui.AdvancedFilterBar?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.webkillerai.app.ui.MainController"
      spacing="12" prefWidth="720" prefHeight="520">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="WebKillerAI — Safe Scanner (MVP)"/>

    <!-- Target + Depth -->
    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints minWidth="120"/>
        </columnConstraints>
        <children>
            <Label text="Target URL:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="targetField"
                       promptText="https://example.com"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <HBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="2" alignment="CENTER_LEFT">
                <Label text="Depth"/>
                <Spinner fx:id="depthSpinner" prefWidth="80"/>
            </HBox>
        </children>
    </GridPane>

    <!-- ★ 추가: 모드/성능/스코프/증거 표시 토글 -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Mode"/>
        <ComboBox fx:id="modeCombo" prefWidth="140"/>

        <Separator orientation="VERTICAL"/>

        <Label text="RPS"/>
        <Spinner fx:id="rpsSpinner" prefWidth="90"/>

        <Label text="Concurrency"/>
        <Spinner fx:id="ccSpinner" prefWidth="90"/>

        <Separator orientation="VERTICAL"/>

        <CheckBox fx:id="sameDomainCheck" text="Same-domain only" selected="true"/>
        <CheckBox fx:id="followRedirectsCheck" text="Follow redirects" selected="true"/>

        <Separator orientation="VERTICAL"/>

        <CheckBox fx:id="showEvidenceCheck" text="Show requestLine + snippet"/>
    </HBox>

    <HBox spacing="8" alignment="CENTER_LEFT">
        <Button fx:id="scanButton" text="Scan" onAction="#onScan"/>
        <Button fx:id="cancelBtn" text="취소" onAction="#onCancelScan" disable="true"/>
        <Region HBox.hgrow="ALWAYS"/>
        <!-- 로그 레벨 토글 -->
        <Label text="Log Level:"/>
        <ComboBox fx:id="cbLogLevel" prefWidth="120"/>
    </HBox>

    <ProgressBar fx:id="progressBar" prefWidth="Infinity"/>
    <Label fx:id="etaLabel" text="ETA --:--"/>
    <Label fx:id="statusLabel" text="Ready." wrapText="true"/>

    <!-- 간단 필터 바 -->
    <HBox spacing="8">
        <TextField fx:id="searchField" promptText="검색(주소/타입/증거/시간)" HBox.hgrow="ALWAYS"/>
        <CheckBox fx:id="chkHigh" text="HIGH" selected="true"/>
        <CheckBox fx:id="chkMed" text="MED" selected="true"/>
        <CheckBox fx:id="chkLow" text="LOW" selected="true"/>
        <ToggleButton fx:id="tglSeverityDesc" text="Severity: HIGH→LOW" selected="true"/>
        <Button text="CSV 내보내기" onAction="#onExportCsv"/>
    </HBox>

    <!-- 고급 필터 바 -->
    <AdvancedFilterBar fx:id="filterBar"/>

    <!-- 프리셋 바 -->
    <HBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Preset"/>
        <ComboBox fx:id="cbPreset" promptText="Select a preset..." prefWidth="220"/>
        <Button fx:id="btnApplyPreset" text="Apply"/>
        <Button fx:id="btnSavePreset"  text="Save…"/>
        <Button fx:id="btnDeletePreset" text="Delete"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="(stored in Preferences)" opacity="0.6"/>
    </HBox>

    <TableView fx:id="issuesTable" prefHeight="260.0" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colUrl" text="URL" prefWidth="360.0"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="120.0"/>
            <TableColumn fx:id="colSeverity" text="Severity" prefWidth="100.0"/>
            <TableColumn fx:id="colEvidence" text="Evidence" prefWidth="260.0"/>
            <TableColumn fx:id="colDetectedAt" text="DetectedAt" prefWidth="170.0"/>
        </columns>
    </TableView>

    <HBox spacing="8">
        <Label text="Save to:"/>
        <TextField fx:id="outputDirField" HBox.hgrow="ALWAYS" promptText="out (default)"/>
        <Button text="Browse..." onAction="#onBrowseOutputDir"/>
    </HBox>

    <HBox spacing="8">
        <Label text="Output:"/>
        <TextField fx:id="pathField" HBox.hgrow="ALWAYS" promptText="Saved file path will appear here"/>
        <CheckBox fx:id="chkExportJson" text="Also save JSON" selected="true"/>
        <CheckBox fx:id="chkExportPdf" text="Also save PDF" selected="true"/>
        <Button fx:id="copyPathButton" text="Copy Path" onAction="#onCopyPath"/>
        <Button fx:id="openFolderButton" text="Open Folder" onAction="#onOpenFolder"/>
        <Button fx:id="openReportButton" text="Open report" onAction="#onOpenReport"/>
    </HBox>
</VBox>
